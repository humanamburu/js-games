.nav
  position fixed
  top 0
  left 0
  right 0
  height 3.5em
  box-shadow 0 0 2px rgba(0,0,0,.5)
  padding 1em
  display flex
  align-items center
  background-color #fff
  z-index 1

  &-wrapper
    max-width 768px
    width 100%
    display flex
    align-items center
    justify-content space-between
    margin 0 auto


  &-logo-wrapper
    text-decoration none

  &-logo
    font-size 1.5em
    margin 0
    user-select none
    color #222
    text-decoration none

